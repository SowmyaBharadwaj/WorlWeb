<script>
var videoIndex = 1;
showVideo(videoIndex);

function plusVideos(n) {
  showVideo(slideIndex += n);
}

function currentVideo(n) {
  showVideo(videoIndex = n);
}

function showSlides(n) {
  var i;
  var videos = document.getElementsByClassName("video");
  var cir-indicator = document.getElementsByClassName("cir-indicator");
  if (n > video.length) {videoIndex = 1}
  if (n < 1) {videoIndex = video.length}
  for (i = 0; i < video.length; i++) {
      video[i].style.display = "none";
  }
  for (i = 0; i < cir-indicator.length; i++) {
      cir-indicator[i].className = cir-indicator[i].className.replace(" active", "");
  }
  video[videoIndex-1].style.display = "block";
  cir-indicator[videoIndex-1].className += " active";
}
</script>
